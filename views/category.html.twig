{% extends "layout.html.twig" %}

{% block title %}{{ parent() }} - {{ category.name }}{% endblock %}

{% block content %}

<h2>{{ category.name }}</h2>

{% for post in category.posts %}
<article>
    <h3 class="title">{{ post.title }}</h3>
    
    {% include '_post_info.html.twig' %}

    {{ post.excerpt | raw }}

    <p><a href="{{ url(post) }}">Read more...</a></p>
</article>
{% endfor %}

{% endblock %}
